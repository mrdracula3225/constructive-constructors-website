{
  "name": "constructive-constructors",
  "version": "1.0.0",
  "description": "A modern construction company website",
  "main": "index.html",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./css/styles.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./css/styles.css --minify",
    "optimize-images": "node scripts/optimize-images.js",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write \"**/*.{js,html,css,json}\""
  },
  "keywords": [
    "construction",
    "website",
    "tailwindcss"
  ],
  "author": "Constructive Constructors",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "sharp": "^0.32.1",
    "tailwindcss": "^3.4.1"
  }
} 